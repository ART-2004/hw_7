<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_launcher_foreground"

        tools:ignore="MissingConstraints" >
        <Button
            android:id="@+id/bu0"
            android:onClick="clikNumder"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="500dp"
            android:backgroundTint="@color/greey"
            android:text="0"
            android:textSize="20pt"
            android:gravity="top"
            />

        <Button
            android:id="@+id/buClik"
            android:onClick="clikNumder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="500dp"
            android:backgroundTint="@color/greey"
            android:text="."
            android:textSize="20pt"/>

        <Button
            android:id="@+id/buequals"
            android:onClick="clikEquals"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="500dp"
            android:backgroundTint="@color/Orange"
            android:text="="
            android:textSize="20pt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/bu1"
            android:onClick="clikNumder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="420dp"
            android:backgroundTint="@color/greey"
            android:text="1"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/bu2"
            android:onClick="clikNumder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="420dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/greey"
            android:text="2"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/bu3"
            android:onClick="clikNumder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="420dp"
            android:backgroundTint="@color/greey"
            android:text="3"
            android:textSize="20pt" />
        <Button
            android:id="@+id/buplus"
            android:onClick="operations"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="420dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/Orange"
            android:text="+"
            android:textSize="20pt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/bu4"
            android:onClick="clikNumder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="340dp"
            android:backgroundTint="@color/greey"
            android:text="4"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/bu5"
            android:onClick="clikNumder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="340dp"
            android:backgroundTint="@color/greey"
            android:text="5"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/bu6"
            android:onClick="clikNumder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="340dp"
            android:backgroundTint="@color/greey"
            android:text="6"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/buminus"
            android:onClick="operations"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="340dp"
            android:backgroundTint="@color/Orange"
            android:text="-"
            android:textSize="20pt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/bu7"
            android:onClick="clikNumder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="250dp"
            android:backgroundTint="@color/greey"
            android:text="7"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/bu8"
            android:onClick="clikNumder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="250dp"
            android:backgroundTint="@color/greey"
            android:text="8"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/bu9"
            android:onClick="clikNumder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="250dp"
            android:backgroundTint="@color/greey"
            android:text="9"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/bumultiplication"
            android:onClick="operations"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="250dp"
            android:backgroundTint="@color/Orange"
            android:text="x"
            android:textSize="15pt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/buAC"
            android:onClick="acClik"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="160dp"
            android:backgroundTint="@color/grey"
            android:text="ac"
            android:textSize="13pt"/>
        <Button
            android:id="@+id/buplusminus"
            android:onClick="clikNumder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="160dp"
            android:backgroundTint="@color/grey"
            android:text="+/-"
            android:textSize="13pt"/>
        <Button
            android:id="@+id/bupercentage"
            android:onClick="ClikPercent"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="160dp"
            android:backgroundTint="@color/grey"
            android:text="%"
            android:textSize="13pt"/>
        <Button
            android:id="@+id/budivision"
            android:onClick="operations"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="160dp"
            android:backgroundTint="@color/Orange"
            android:text="รท"
            android:textSize="14pt"/>
    </LinearLayout>
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="right"
        android:text="0"
        android:textSize="30pt"
        tools:ignore="MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>